black-color = #101010
white-color = #e0e0e0
black-gradient = linear-gradient(rgba(#101010c0), rgba(#10101000))
white-gradient = linear-gradient(rgba(#e0e0e0c0), rgba(#e0e0e000))

@media (prefers-color-scheme: ligth)
  bg-color = white-color
  text-color = black-color
@media (prefers-color-scheme: dark)
  bg-color = black-color
  text-color = white-color

:host
  font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
  font-size 14px
  color black-color
  background-color white-color
  box-sizing border-box
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  @media (prefers-color-scheme: dark)
    color white-color
    background-color black-color

h1,
h2,
h3,
h4,
h5,
h6
  margin 8px 0

p
  margin 0

.spacer
  flex 1

.spacer-px
  flex 0 20px

.toolbar
  position fixed
  top 0
  left 0
  right 0
  height 60px
  display flex
  align-items center
  color black-color
  font-weight 600
  z-index 10
  background white-gradient
  @media (prefers-color-scheme: dark)
    color white-color
    background black-gradient

#menu-button
  color black-color
  background-color transparent
  border-color transparent
  @media (prefers-color-scheme: dark)
    color white-color

.toolbar #top-label
  font-size 1.5rem

.toolbar img
  margin 0 16px

.toolbar-space
  display flex
  height 60px

.content
  display flex
  margin 82px auto 32px
  padding 0 16px
  max-width 960px
  flex-direction column
  align-items center

svg.material-icons
  height 24px
  width auto

svg.material-icons:not(:last-child)
  margin-right 8px
