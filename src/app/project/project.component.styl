black-color = #101010
white-color = #e0e0e0

.projects-button
  display block
  margin-left auto
  margin-right auto
  width 90vw
  height 40px
  margin-top 5px

.project-bg
  width 100vw
  height calc(100vh - 60px)
  background-size cover
  background-position center center

#avatar2i
  animation-name title_show
  animation-timing-function ease
  animation-duration 1s
  animation-fill-mode forwards

.side-space
  padding 0
  @media screen and (min-width 1000px)
    padding 0 10%
  
.text
  margin-top 10px
  font-size 1rem
  line-height 1.2rem
  padding 0 10%
  @media screen and (min-width 660px)
    font-size 1.2rem
    line-height 1.5rem
    padding 0 0 0 40%
    width 50%
  
h1
  text-align center
  vertical-align bottom
  margin 0
  font-size 2.5rem
  line-height 3rem
  @media screen and (min-width 660px)
    text-align left
    margin 0 0 0 10%
    font-size 4rem
    line-height 4rem
    transform translateY(4.5rem)

h2
  text-align center
  font-size 2rem
  line-height 2rem
  margin 50px 0 0 0
  @media screen and (min-width 660px)
    text-align left
    margin 50px 0 0 10%
    font-size 3rem
    line-height 3rem
    transform translateY(3.7rem)

@keyframes title_show
  0%
    opacity 0
    transform translateY(20vh)
  50%
    opacity 1
    transform translateY(20vh)
  100%
    opacity 1
    transform translateY(0)