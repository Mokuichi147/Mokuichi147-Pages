black-color = #101010
white-color = #e0e0e0
accent-color = #302a63


.project
  animation-name projectpage_move
  animation-timing-function ease
  animation-delay 1.1s
  animation-duration 0.4s
  animation-fill-mode both

.title-block
  margin-top 50px
  animation-name title_block_show
  animation-timing-function ease
  animation-duration 1s
  animation-fill-mode forwards

.subtitle-text
  margin-top 50px
  padding 0 5%
  text-align center

.content-space
  padding 0 5%
  animation-name project_show
  animation-timing-function ease
  animation-delay 1s
  animation-duration 0.8s
  animation-fill-mode both
  @media screen and (min-width 1000px)
    padding 0 10%

.text
  margin-top 10px
  font-size 1rem
  line-height 1.2rem
  padding 0 10%
  @media screen and (min-width 660px)
    font-size 1.2rem
    line-height 1.5rem
    padding 0 0 0 40%
    width 50%

.yt
  margin-top 100px
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  img
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.back-button
  margin-top 50px
  text-align center

.space
  height 30vh

.chips
  height 2rem
  line-height 2rem
  display inline-flex
  font-weight bold
  padding-left 1rem
  padding-right 1rem
  margin-right 10px
  margin-top 10px
  border-radius 1vh

.main-color
  color white-color
  background-color accent-color

h1
  text-align center
  vertical-align bottom
  margin 0
  font-size 2.5rem
  line-height 3rem
  animation-name project_title_slide
  animation-timing-function ease
  animation-duration 0.6s
  animation-fill-mode forwards
  @media screen and (min-width 660px)
    font-size 4rem
    line-height 4rem

h2
  text-align center
  font-size 2rem
  line-height 2rem
  margin 50px 0 0 0
  @media screen and (min-width 660px)
    text-align left
    margin 50px 0 0 10%
    font-size 3rem
    line-height 3rem
    transform translateY(3.7rem)

h4
  text-align center
  vertical-align bottom
  margin 0
  font-size 1rem
  line-height 1.3rem
  animation-name subtitle_slide
  animation-timing-function ease-in-out
  animation-duration 0.6s
  animation-fill-mode forwards
  @media screen and (min-width 660px)
    font-size 1.5rem
    line-height 1.8rem


@keyframes projectpage_move
  0%
    transform translateY(30vh)
  100%
    transform translateY(0)

@keyframes project_show
  0%
    opacity 0
  100%
    opacity 1

@keyframes title_block_show
  0%
    opacity 0
    transform rotate(180deg)
  5%
    opacity 1
  35%
    transform rotate(180deg)
  100%
    transform rotate(0deg)

@keyframes project_title_slide
  0%
    transform translateX(-30vw)
  100%
    transform translateX(0)

@keyframes subtitle_slide
  0%
    transform translateX(30vw)
  100%
    transform translateX(0)
